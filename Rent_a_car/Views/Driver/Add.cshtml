@model Rent_a_car.Models.Driver
@{
ViewData["Title"] = "Driver";
}
<div class="container">
    <div class="row">
        <div class="col-6 offset-3">
            <div class="mt-3 p-2 shadow rounded">
                <div class="-center border-bottom">
                    <h2>Add Driver</h2>
                </div>
                <div>
                    @Html.ValidationSummary()
                </div>
                <div class="mt-3 p-3">
                    <form action="/Driver/Add" method="post" enctype="multipart/form-data" autocomplete="off">
                        <div class="mb-3 row">
                            <label class="col-3 col-form-label ">Username</label>
                            <div class="col-9">
                                @Html.TextBoxFor(m => m.UserName, new {@class="form-control", placeholder="Enter Username"})
                            </div>
                        </div>
                        <div class="mb-3 row">
                            <label class="col-3 col-form-label ">Password</label>
                            <div class="col-9">
                                @Html.TextBoxFor(m => m.PasswordHash, new {@class="form-control", placeholder="Enter Password"})
                            </div>
                        </div>
                        <div class="mb-3 row">
                            <label class="col-3 col-form-label ">First Name</label>
                            <div class="col-9">
                                @Html.TextBoxFor(m => m.First_Name, new {@class="form-control", placeholder="Enter First_Name"})
                            </div>
                        </div>
                        <div class="mb-3 row">
                            <label class="col-3 col-form-label ">Last Name</label>
                            <div class="col-9">
                                @Html.TextBoxFor(m => m.Last_Name, new {@class="form-control", placeholder="Enter Last_Name"})
                            </div>
                        </div>
                        <div class="mb-3 row">
                            <label class="col-3 col-form-label ">ЕГН</label>
                            <div class="col-9">
                                @Html.TextBoxFor(m => m.EGN, new {@class="form-control", placeholder="Enter EGN"})
                            </div>
                        </div>
                        <div class="mb-3 row">
                            <label class="col-3 col-form-label ">Phone</label>
                            <div class="col-9">
                                @Html.TextBoxFor(m => m.PhoneNumber, new {@class="form-control", placeholder="Enter Phone"})
                            </div>
                        </div>
                        <div class="mb-3 row">
                            <label class="col-3 col-form-label ">Email</label>
                            <div class="col-9">
                                @Html.TextBoxFor(m => m.Email, new {@class="form-control", placeholder="Enter Email"})
                            </div>
                        </div>
                        <div class="mb-3">
                            <button class="btn btn-sm p-2 btn-dark" type="reset">Clear</button>
                            <button class="btn btn-sm p-2 btn-success" type="submit">Add</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script type="/javascript">
    function showAlert() {
        if('@ViewBag.isSaved' == 'True') {
            alert("New Driver Successfully Added");
        }
    }
    $(document).ready(function () {
        showAlert();
    })
</script>
