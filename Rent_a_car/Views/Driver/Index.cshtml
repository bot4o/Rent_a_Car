@model IEnumerable<Rent_a_car.Models.Driver>
@{
    ViewData["Title"] = "Driver";
}
<div class="container"> 
    <div class="row">

        @if (User.IsInRole("Admin"))
        {
        <div class="mt-3 p-3 ">
            <div class="p-2">
                <table style="width: max-content;"class="table table-responsive table-bordered text-center">
                    <thead class="text-info">
                        <tr>
                            <th>ID</th>
                            <th>Username</th> <th>Password</th> <th>First name</th>
                            <th>Last name</th>
                            <th>ЕГН</th>
                            <th>Phone</th>
                            <th>Email</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach(var item in Model)
                        {
                        <tr>
                            <td>
                                <form method="post" action="@Url.Action("Delete", "Driver")">
                                    <input type="hidden" name="id" value="@item.Id" />
                                    <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                                </form>
                            </td>
                            <td>@item.Id</td>
                            <td>@item.UserName</td>
                            <td>@item.PasswordHash</td>
                            <td>@item.First_Name</td>
                            <td>@item.Last_Name</td>
                            <td>@item.EGN</td>
                            <td>@item.PhoneNumber</td>
                            <td>@item.Email</td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        }
        else
        {
            <p>Nothing here</p>
            @*
            <div class="d-flex justify-content-between mb-3 p-3">
                <h3 class="text-info">Driver List</h3>
                @Html.ActionLink("Add Driver", "Add", "Driver", null, new {@class="btn btn-sm btn-primary"})
            </div>
            *@
        }
    </div>
</div>
