@model IEnumerable<Rent_a_car.Models.Rent>
@{
    ViewData["Title"] = "Rent";
}
<div class="container">
    <div class="row">
        <div class="col-12">
                @if (User.IsInRole("Admin"))
                {
                <div class="d-flex justify-content-between border-bottom mb-3">
                    <h2>Rent List</h2>
                    @Html.ActionLink("Book Now", "Add", "Rent", null, new { @class = "btn btn-sm btn-primary" })
                </div>
                <div class="mt-3 p-3 shadow rounded">
                    <div class="mt-3 p-3">
                        <table class="table table-responsive table-bordered text-center">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>DriverId</th>
                                    <th>CarId</th>
                                    <th>StartDate</th>
                                    <th>EndDate</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.Id</td>
                                        <td>@item.DriverId</td>
                                        <td>@item.CarId</td>
                                        <td>@item.StartDate</td>
                                        <td>@item.EndDate</td>
                                        <td>
                                            <form method="post" action="@Url.Action("Delete", "Rent")">
                                                <input type="hidden" name="id" value="@item.Id" />
                                                <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                                            </form>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
                }
                else
                {
                   <p>Nothing here</p> 
                   <div class="d-flex justify-content-between border-bottom mb-3">
                       <h2>Rent List</h2>
                       @Html.ActionLink("Book Now", "Add", "Rent", null, new { @class = "btn btn-sm btn-primary" })
                   </div>
                }       
        </div>
    </div>
</div>
