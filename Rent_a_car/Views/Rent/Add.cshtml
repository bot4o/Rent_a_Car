@model Rent_a_car.Models.Rent
@{
    ViewData["Title"] = "Booking Now";
}
<div class="container">
    <div class="row">
        <div class="col-6 offset-3">
            <div class="mt-3 p-3 shadow rounded">
                <div class="text-center border-bottom mb-3 p-3">
                    <h2 class="text-info">Booking Now</h2>
                </div>
                <div>
                    @Html.ValidationSummary()
                </div>
                <div class="p-3">
                    <form action="/Rent/Add" method="post" autocomplete="off">
                        <div id="locationDetails">
                            <div class="mb-3 row">
                                <label class="col-3 col-form-label text-info">Start date</label>
                                <div class="col-9">
                                    @Html.TextBoxFor(m => m.Start_date, new {@class="form-control", type="datetime-local"})
                                </div>
                            </div>
                            <div class="mb-3 row">
                                <label class="col-3 col-form-label text-info">End date</label>
                                <div class="col-9">
                                    @Html.TextBoxFor(m => m.End_date, new {@class="form-control", type="datetime-local"})
                                </div>
                            </div>
                            <div id="cardetails" >
                                <div class="mb-3 row">
                                    <label class="col-3 col-form-label text-info">Brand</label>
                                    <div class="col-9">
                                        <select id="brandddl" name="Brand" class="form-select">
                                            <option>Select Brand</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="mb-3 row">
                                    <label class="col-3 col-form-label text-info">Model</label>
                                    <div class="col-9">
                                        <select id="modelddl" name="Model" class="form-select">
                                            <option>Select Model</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="mb-3 row">
                                    <label class="col-3 col-form-label text-info">Driver</label>
                                    <div class="col-9">
                                        <select id="driverddl" name="Driver" class="form-select">
                                            <option>Select Driver</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="mb-3 row">
                                    <label class="col-3 col-form-label text-info">Car</label>
                                    <div class="col-9">
                                        <select id="carddl" name="Selected_car" class="form-select">
                                            <option>Select Car</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="mb-3">
                                    <button class="btn btn-sm p-2 btn-dark" type="reset">
                                        Clear
                                    </button>
                                    <button class="btn btn-sm p-2 btn-success" type="submit">
                                        Book Now
                                    </button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<!-- TODO: getModel() -->
<script type="text/javascript">
    function getBrand() {
        $.ajax({
            url: '/Rent/GetBrand',
            success: function (data) {
                let options = "";
                for(let item of data) {
                    options += `<option value=${item}>${item}</option>`;
                }
                $('#brandddl').append(options);
            },
            error: function (err) {
                alert(err)
            }
        })
    }

    $(document).ready(function () {
        getBrand();
    })
    

</script>
