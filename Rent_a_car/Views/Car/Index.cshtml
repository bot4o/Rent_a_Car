@{
    ViewData["Title"] = "Car";
}

<h2>Car Page</h2>

<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="mt-3 p-3 shadow rounded">
                <div class="d-flex justify-content-between mb-3 p-3">
                    <h3 class="text-info">Car List</h3>
                    @Html.ActionLink("Add New Car", "Add", "Car", null, new {@class="btn btn-sm btn-primary"})
                </div>
                <div class="p-3">
                    <table class="table table-responsive table-bordered">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Brand</th>
                                <th>Model</th>
                                <th>Year</th>
                                <th>Seats</th>
                                <th>Description</th>
                                <th>Price</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
    
