@model IEnumerable<Rent_a_car.Models.Car>
@{
    ViewData["Title"] = "Car";
}

<h2>Car Page</h2>

<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="mt-3 p-3 shadow rounded">
                <div class="p-3">
                    @if (User.IsInRole("Admin"))
                    {
                    <div class="d-flex justify-content-between mb-3 p-3">
                        <h3>Car List</h3>
                        @Html.ActionLink("Add New Car", "Add", "Car", null, new {@class="btn btn-sm btn-primary"})
                    </div>
                    <table class="table table-responsive table-bordered text-center">
                        <thead> 
                            <tr>
                                <th>ID</th>
                                <th>Brand</th>
                                <th>Model</th>
                                <th>Year</th>
                                <th>Seats</th>
                                <th>Description</th>
                                <th>Price</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach(var item in Model)
                            {
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.Brand</td>
                                <td>@item.Model</td>
                                <td>@item.Year</td>
                                <td>@item.Seats</td>
                                <td>@item.Description</td>
                                <td>@item.Price</td>
                                <td>
                                    <form method="post" action="@Url.Action("Delete", "Car")">
                                        <input type="hidden" name="id" value="@item.Id" />
                                        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                                    </form>
                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                    }
                    else
                    {
                    <table class="table table-responsive table-bordered text-center">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Brand</th>
                                <th>Model</th>
                                <th>Year</th>
                                <th>Seats</th>
                                <th>Description</th>
                                <th>Price</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach(var item in Model)
                            {
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.Brand</td>
                                <td>@item.Model</td>
                                <td>@item.Year</td>
                                <td>@item.Seats</td>
                                <td>@item.Description</td>
                                <td>@item.Price</td>
                            </tr>
                            }
                        </tbody>
                    </table>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
    
